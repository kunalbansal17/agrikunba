{
  "compilerOptions": {
    "baseUrl": ".",
"paths": {
  "krishigpt-core": ["packages/krishigpt-core"],
  "krishigpt-content": ["packages/krishigpt-content"],
  "krishigpt-tools": ["packages/krishigpt-tools"],
  "krishigpt-sdk": ["packages/krishigpt-sdk"]
},
"types": ["node"],
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
